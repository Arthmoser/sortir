{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Liste des utilisateurs{% endblock %}


{% block body %}

<div class="content1">
    <h1>Gérer les utilisateurs</h1>
    <table>
        <thead>
        <tr class="activityLine">
            <td>Utilisateurs</td>


            <td>Actions</td>
        </tr>
        </thead>
        <tbody>

{% for user in users %}
    <tr>
        <td>
            <a href="{{ path('user_profil',{'id' : user.id})  }}">
                {{ user.lastname }}
                {{ user.firstname }}
            </a>


        </td>

    <td>
        <a class="link_button" href="{{ path('admin_update', {'id' : user.id}) }}"
           onclick="return confirm('Modifier le profil de l\'utilisateur {{ user.lastname }} ?')">Modifier</a>
{#        <a class="link_button" href="{{ path('admin_desable', {'id': user.id}) }}"#}
{#           onclick="return confirm('Etes vous sur de vouloir désactiver l\'utisateur {{ user.lastname }} ?')">Désactiver</a>#}
        <a class="link_button" href="{{ path('admin_remove', {'id': user.id}) }}"
           onclick="return confirm('Etes vous sur de vouloir supprimer l\'utisateur {{ user.lastname }} ?')">Supprimer</a>
    </td>
</tr>
{% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}