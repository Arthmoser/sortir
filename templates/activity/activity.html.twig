{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Activités {% endblock %}

{% block body %}
    <h2>
        {% if activity.id == null %}
            Créer une sortie
            {% else %}
            Modifier une sortie
        {% endif %}
    </h2>
    {{ form_start(activityForm) }}

    <div class="form">

        {{ form_label(activityForm.name) }}
        {{ form_widget(activityForm.name) }}
        {{ form_errors(activityForm.name) }}
    </div>


    {{ form_rest(activityForm) }}

    <button type="submit">Enregistrer</button>
    <button>Publier la sortie </button>
    <button>Annuler</button>


    {{ form_end(activityForm) }}

{% endblock %}
