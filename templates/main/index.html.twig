{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Home{% endblock %}

{% block body %}
    <div class="box">
        <table class="table">
            <thead class="head">
            <tr>
                <td>Nom de la sortie</td>
                <td>Date de la sortie</td>
                <td>Cl√¥ture</td>
                <td>Inscrits/Places</td>
                <td>Etat</td>
                <td>Inscrit</td>
                <td>Organisateur</td>
                <td>Actions</td>
            </tr>
            </thead>

            <tbody class="down">
            {% for activity in activities %}
                <tr>
                    <td>{{ activity.name }}</td>
                    <td>{{ activity.startingDateTime  | date('d-m-Y H:i') }}</td>
                    <td>{{ activity.registrationDeadLine  | date('d-m-Y') }}</td>
                    {#                    <td>{{ activity.duration }}</td> A modifier #}
                    <td> / {{ activity.maxRegistrationNb }}</td>
                    {#                    <td>{{ activity.overview }}</td> A modifier #}
                    {#                    <td>{{ activity.location.name }}</td> A modifier #}
                    <td>{{ activity.status.type }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
